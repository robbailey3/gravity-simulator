{
  "extends": ["tslint-config-airbnb", "tslint:latest"],
  "rules": {
    "quotemark": [true, "single"],
    "trailing-comma": false,
    "member-ordering": [true, { "order": "fields-first" }],
    "completed-docs": [
      true,
      {
        "classes": {
          "visibilities": ["exported"]
        },
        "enums": {
          "visibilities": ["exported"]
        },
        "functions": {
          "visibilities": ["exported"]
        },
        "interfaces": {
          "visibilities": ["exported"]
        },
        "methods": true,
        "namespaces": {
          "visibilities": ["exported"]
        },
        "properties": {
          "locations": "all",
          "privacies": ["protected", "public"]
        },
        "types": {
          "visibilities": ["exported"]
        },
        "variables": {
          "visibilities": ["exported"]
        }
      }
    ],
    "interface-name": false
  }
}
